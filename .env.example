# BlueBubbles Web App Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# BlueBubbles Server Configuration
# Your BlueBubbles server URL (must be accessible from the web)
NEXT_PUBLIC_BLUEBUBBLES_HOST=https://your-server-url.com

# Your BlueBubbles server password/auth key
# Get this from your BlueBubbles server settings
NEXT_PUBLIC_BLUEBUBBLES_PASSWORD=your-guid-auth-key-here

# Optional: Flutter Web Configuration
# Port for local development server (default: 3000)
FLUTTER_WEB_PORT=3000

# Host for local development server (default: 0.0.0.0)
FLUTTER_WEB_HOST=0.0.0.0

# Web renderer: auto, html, or canvaskit (default: auto)
FLUTTER_WEB_RENDERER=auto
